<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seller_image_upload"

    android:padding="20dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textColor="#FFFFF0"
            >

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="20dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:scaleType="fitXY"
                    android:contentDescription="Main Image"
                    android:id="@+id/imageView"
                    android:src="@drawable/editedlogo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Image Border"
                    android:padding="0dp"
                    />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Choose Image"
                android:layout_marginBottom="15dp"

                android:textColor="#000"
                android:background="@drawable/my_button_bg2"
                android:id="@+id/buttonChoose" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_bg2"
                >
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Name            :"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFFFF0"
                    />

                <EditText
                    android:id="@+id/edtname"
                    android:hint="Enter Name of product"
                    android:textColor="#FFFFF0"
                    android:textColorHint="#FFFFF0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Price             :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFF0"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter price"
                    android:textColor="#FFFFF0"
                    android:textColorHint="#FFFFF0"
                    android:id="@+id/edtprice" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity       :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFF0"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Quantity "
                    android:textColor="#FFFFF0"
                    android:textColorHint="#FFFFF0"
                    android:id="@+id/edtqty"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Description  :"
                    android:textSize="20sp"
                    android:textColor="#FFFFF0"
                    android:textStyle="bold"
                    android:id="@+id/textView" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Description"
                    android:textColor="#FFFFF0"
                    android:textColorHint="#FFFFF0"
                    android:id="@+id/edtdec"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="About us      :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFF0"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFF0"
                    android:textColorHint="#FFFFF0"
                    android:id="@+id/edtinfo"/>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:text="Submit"
                android:textColor="#000"
                android:background="@drawable/my_button_bg2"
                android:id="@+id/buttonUpload" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>