<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cat_second"
    >

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Your Shopping Cart Is empty...."
    android:textSize="18dp"
    android:textStyle="bold"
    android:layout_marginLeft="80dp"/>
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/start_shopping"
android:background="@drawable/my_button_bg2"
android:padding="5dp"
android:textSize="20dp"
android:layout_marginTop="320dp"
android:text="Start Shoping Now.."
android:layout_marginLeft="80dp"
android:layout_below="@+id/textView"
android:layout_centerHorizontal="true" />

<ImageView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/empty_cart"
android:layout_marginTop="50dp"
    />
    </FrameLayout>